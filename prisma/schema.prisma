generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  image_url String
  invoices  Invoice[]
}

model Invoice {
  id          String        @id @default(uuid())
  customer_id String
  amount      Float
  date        DateTime
  status      InvoiceStatus
  customer    Customer      @relation(fields: [customer_id], references: [id])
}

model Revenue {
  id      String @id @default(uuid())
  month   String
  revenue Float
}

enum InvoiceStatus {
  pending
  paid
}
